---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const pageTitle = 'About ME';
const identity = {
	firstname: 'Albert',
	lastname: 'Au',
	country: 'Canada',
	age: 25,
	hobbies: ['football', 'reading', 'swimming'],
};
const skills = ['HTML', 'CSS', 'JS'];

let fullname = identity.firstname + ' ' + identity.lastname;

let isHappy = true;
let isFinished = false;
let goal = 3;

const skillColor = '#880000';
const skillFontWeight = 'normal';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle} - Astro Lesson</title>
		<style define:vars={{skillColor,skillFontWeight}}>
			.skill {color:var(--skillColor); font-weight:var(--skillFontWeight);}
		</style>
	</head>
	<body>
		<Header />
		<main class="container">
			<h1>{pageTitle}</h1>
			<p>Hi, my name is {fullname}. I am from {identity.country}. I am {identity.age} years old.</p>
			<p>I love {identity.hobbies[0]}, {identity.hobbies[1]}, and {identity.hobbies[2]}.</p>
			<p>I know:</p>
			<ul>
				{skills.map((skill) => 
					<li class="skill">{skill}</li>
				)}
			</ul>

			{isHappy && <p>I'm happy right now.</p>}
			{isFinished && <p>I finished the tutorial.</p>}
			{goal===3? <p>I commited all 3 goals.</p>:<p>My goals are awaiting.</p>}

		</main>
		<Footer />

	</body>
</html>
